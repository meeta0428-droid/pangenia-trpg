{
    "rules": {
        "rooms": {
            "$roomId": {
                "teamPool": {
                    // 誰でも読み込み可能
                    ".read": true,
                    // 書き込みは「数値」のみ許可
                    // かつ、極端に大きな数字やマイナスを防ぐ（0〜999の範囲）
                    ".write": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 999",
                    // 文字列などは書き込めないようにする
                    ".validate": "newData.isNumber()"
                }
            }
        }
    }
}