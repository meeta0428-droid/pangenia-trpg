{
    "rules": {
        "rooms": {
            "$roomId": {
                "teamPool": {
                    // 誰でも読み込み可能
                    ".read": true,
                    // 書き込みは「数値」のみ許可
                    ".write": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 999"
                },
                "characters": {
                    // キャラクターデータは誰でも読み書き可能
                    ".read": true,
                    ".write": true
                }
            }
        }
    }
}